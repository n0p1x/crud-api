{
  "name": "crud-api",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/src/app.js",
  "scripts": {
    "start:dev": "nodemon --exec 'node --import=./register.js' --watch 'src' --verbose src/app.ts",
    "start:prod": "npm run build && node dist/src/app.js",
    "start:multi": "npm run build && cross-env CLUSTER_MODE=true node dist/src/app.js",
    "build": "tsc",
    "test": "node --import=./register.js --test tests/**/*.test.ts",
    "lint": "eslint {src,tests}/**/*.ts",
    "lint:fix": "eslint {src,tests}/**/*.ts --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.6",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.13.0",
    "eslint-plugin-perfectionist": "^3.9.1",
    "globals": "^15.11.0",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0"
  }
}
